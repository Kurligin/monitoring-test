{
  "id": null,
  "uid": "system-overview",
  "title": "System / Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "tags": ["system", "node_exporter"],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 2,
        "query": "label_values(node_uname_info, instance)",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "includeAll": true,
        "multi": true,
        "regex": ""
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU usage (%)",
      "id": 1,
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "expr": "avg by (instance) (rate(node_cpu_seconds_total{mode!=\"idle\",instance=~\"$instance\"}[5m])) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory usage (%)",
      "id": 2,
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes{instance=~\"$instance\"} - node_memory_MemAvailable_bytes{instance=~\"$instance\"}) / node_memory_MemTotal_bytes{instance=~\"$instance\"} * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk usage root (%)",
      "id": 3,
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\",instance=~\"$instance\"} - node_filesystem_free_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\",instance=~\"$instance\"}) / node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\",instance=~\"$instance\"} * 100",
          "legendFormat": "{{instance}} /",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network traffic (bytes/s)",
      "id": 4,
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device!~\"lo\",instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}} recv",
          "refId": "A"
        },
        {
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{device!~\"lo\",instance=~\"$instance\"}[5m]))",
          "legendFormat": "{{instance}} sent",
          "refId": "B"
        }
      ]
    }
  ]
}